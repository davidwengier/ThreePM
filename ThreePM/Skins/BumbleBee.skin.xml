<?xml version="1.0" encoding="utf-8"?>
<skin name="Default">
  <control type="All">
    <property name="BackColor" type="Color" value="48,48,48" />
    <property name="ForeColor" type="Color" value="Orange" />
  </control>
  <form type="All">
    <property name="BackColor" type="Color" value="48,48,48" />
    <property name="ForeColor" type="Color" value="Orange" />

	<property name="CaptionTextColor" type="Color" value="Silver" />
	  
	  <property name="CaptionTopColor" type="Color" value="DarkGray" />
	  <property name="CaptionTextBackColor" type="Color" value="SlateGray" />
	  <property name="CaptionBottomColor" type="Color" value="Black" />

	  <property name="CaptionTopColorInactive" type="Color" value="DarkGray" />
	  <property name="CaptionTextBackColorInactive" type="Color" value="DimGray" />
	  <property name="CaptionBottomColorInactive" type="Color" value="Black" />
	  
  </form>
  <form type="MainForm">
    <property name="Player" type="Object">
      <property name="VisColor1" type="Color" value="24,24,24" />
      <property name="VisColor2" type="Color" value="Yellow" />
      <property name="VisColor3" type="Color" value="White" />
      <property name="VisBackColor" type="Color" value="24,24,24" />
    </property>
  </form>
  <control type="SongListView">
    <property name="SelectedColor" type="Color" value="Gray" />
    <property name="Font" type="Font" value="Arial, 10pt" />
  </control>
  <control type="CheckBox">
    <property name="FlatAppearance" type="Object">
      <property name="CheckedBackColor" type="Color" value="Orange" />
      <property name="MouseDownBackColor" type="Color" value="White" />
      <property name="MouseOverBackColor" type="Color" value="Yellow" />
    </property>
  </control>
  <control type="Button">
    <property name="FlatAppearance" type="Object">
      <property name="CheckedBackColor" type="Color" value="Orange" />
      <property name="MouseDownBackColor" type="Color" value="White" />
      <property name="MouseOverBackColor" type="Color" value="Yellow" />
    </property>
  </control>
  <!-- have to set the tickers because they would have been set wrongly after the type="all" above -->
  <control name="tckPosition">
	<property name="ForeColor" type="Color" value="Yellow"/>
	<property name="BackColor" type="Color" value="128,128,0"/>
  </control>
  <control name="tckVolume">
	<property name="ForeColor" type="Color" value="Orange"/>
	<property name="BackColor" type="Color" value="128,96,32"/>
  </control>
  <control name="tckBalance">
  	<property name="ForeColor" type="Color" value="White"/>
	<property name="BackColor" type="Color" value="192,192,192"/>
  </control>
  <control name="tvwLibrary">
	<property name="LineColor" type="Color" value="Gray"/>
  </control>
</skin>