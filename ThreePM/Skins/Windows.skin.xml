<?xml version="1.0" encoding="utf-8"?>
<skin name="Default">
  <control type="All">
    <property name="BackColor" type="Color" value="Control" />
    <property name="ForeColor" type="Color" value="ControlText" />
  </control>
  <form type="All">
    <property name="BackColor" type="Color" value="Control" />
    <property name="ForeColor" type="Color" value="ControlText" />

    <property name="CaptionTextColor" type="Color" value="ActiveCaptionText" />

	  <property name="CaptionTopColor" type="Color" value="GradientActiveCaption" />
	  <property name="CaptionTextBackColor" type="Color" value="ActiveCaption" />
	  <property name="CaptionBottomColor" type="Color" value="GradientActiveCaption" />

	  <property name="CaptionTopColorInactive" type="Color" value="GradientInactiveCaption" />
	  <property name="CaptionTextBackColorInactive" type="Color" value="InactiveCaption" />
	  <property name="CaptionBottomColorInactive" type="Color" value="GradientInactiveCaption" />
	  
  </form>
  <form type="MainForm">
    <property name="Player" type="Object">
      <property name="VisColor1" type="Color" value="DodgerBlue" />
      <property name="VisColor2" type="Color" value="Red" />
      <property name="VisColor3" type="Color" value="Blue" />
      <property name="VisBackColor" type="Color" value="Window" />
    </property>
  </form>
  <control type="SongListView">
    <property name="SelectedColor" type="Color" value="DarkGray" />
    <property name="Font" type="Font" value="Tahoma, 9pt" />
    <property name="CurrentSongFont" type="Font" value="Tahoma, 9pt, style=Bold" />
    <property name="HeaderFont" type="Font" value="Tahoma, 10pt, style=Bold" />
  </control>
  <control type="CheckBox">
    <property name="FlatAppearance" type="Object">
      <property name="CheckedBackColor" type="Color" value="ButtonShadow" />
      <property name="MouseDownBackColor" type="Color" value="ButtonFace" />
      <property name="MouseOverBackColor" type="Color" value="ButtonHighlight" />
    </property>
  </control>
  <control type="Button">
    <property name="FlatAppearance" type="Object">
      <property name="CheckedBackColor" type="Color" value="ButtonShadow" />
      <property name="MouseDownBackColor" type="Color" value="ButtonFace" />
      <property name="MouseOverBackColor" type="Color" value="ButtonHighlight" />
    </property>
  </control>
  <!-- have to set the tickers because they would have been set wrongly after the type="all" above -->
	<control name="tckPosition">
		<property name="ForeColor" type="Color" value="Red"/>
	</control>
	<control name="tckVolume">
		<property name="ForeColor" type="Color" value="Blue"/>
	</control>
	<control name="tckBalance">
		<property name="ForeColor" type="Color" value="Green"/>
	</control>
	<control name="tvwLibrary">
		<property name="LineColor" type="Color" value="Gray"/>
	</control>
</skin>