<?xml version="1.0" encoding="utf-8"?>
<skin name="Default">
  <control type="All">
    <property name="BackColor" type="Color" value="Black" />
    <property name="ForeColor" type="Color" value="Red" />
  </control>
  <form type="All">
    <property name="BackColor" type="Color" value="Black" />
    <property name="ForeColor" type="Color" value="Red" />

    <property name="CaptionTextColor" type="Color" value="Silver" />

	  <property name="CaptionTopColor" type="Color" value="DarkGray" />
	  <property name="CaptionTextBackColor" type="Color" value="SlateGray" />
	  <property name="CaptionBottomColor" type="Color" value="Black" />

	  <property name="CaptionTopColorInactive" type="Color" value="DarkGray" />
	  <property name="CaptionTextBackColorInactive" type="Color" value="DimGray" />
	  <property name="CaptionBottomColorInactive" type="Color" value="Black" />
	  
  </form>
  <form type="MainForm">
    <property name="Player" type="Object">
      <property name="VisColor1" type="Color" value="Black" />
      <property name="VisColor2" type="Color" value="Red" />
      <property name="VisColor3" type="Color" value="Blue" />
      <property name="VisBackColor" type="Color" value="Black" />
    </property>
  </form>
  <control type="SongListView">
    <property name="SelectedColor" type="Color" value="DarkGray" />
    <property name="Font" type="Font" value="Tahoma, 9pt" />
    <property name="CurrentSongFont" type="Font" value="Tahoma, 9pt, style=Bold" />
    <property name="HeaderFont" type="Font" value="Tahoma, 10pt, style=Bold" />
  </control>
  <control type="CheckBox">
    <property name="FlatAppearance" type="Object">
      <property name="CheckedBackColor" type="Color" value="64,64,64" />
      <property name="MouseDownBackColor" type="Color" value="Black" />
      <property name="MouseOverBackColor" type="Color" value="64,64,64" />
    </property>
  </control>
  <control type="Button">
    <property name="FlatAppearance" type="Object">
      <property name="CheckedBackColor" type="Color" value="64,64,64" />
      <property name="MouseDownBackColor" type="Color" value="Black" />
      <property name="MouseOverBackColor" type="Color" value="64,64,64" />
    </property>
  </control>
  <!-- have to set the tickers because they would have been set wrongly after the type="all" above -->
  <control name="tckVolume">
    <property name="ForeColor" type="Color" value="Blue"/>
  </control>
  <control name="tckBalance">
    <property name="ForeColor" type="Color" value="Green"/>
  </control>
</skin>